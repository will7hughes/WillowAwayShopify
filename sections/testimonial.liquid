				},
				{
					"type": "text",
					"id": "testi_review3",
					"label": "Review Icon"
				},
				{
					"type": "text",
					"id": "testi_review4",
					"label": "Review Icon"
				},
				{
					"type": "text",
					"id": "testi_review5",
					"label": "Review Icon"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Testimonial",
			"category": "7. Testimonial"
		}
	]
}
