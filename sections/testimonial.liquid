<style>
	.testimonial-area {
	  padding-top: {{ section.settings.testi_padding_top }}px;
	  padding-bottom: {{ section.settings.testi_padding_bottom }}px;

	  {% if section.settings.our_ser_check %}
	  background-color: {{ section.settings.our_ser_bgcolor }};
	  {% endif %}

	  {% if section.settings.testi_bg_img_check %}
	  background-repeat: no-repeat;
	  background-position: bottom
	  {% endif %}
	}
	.testimonial-slider .testi-content.testi-center{
	  text-align: center;
	}
	.testimonial-slider .testi-content.testi-right{
	  text-align: right;
	}
	.testimonial-slider .testi-content.testi-left{
	  text-align: left;
	}
	.testimonial-slider .testi-content i.quote{
	  font-size: 46px;
	  display: block;
	  color: #e6e6e6;
	}
	@media (max-width: 767px){
	  .testimonial-area {
	    padding-top: 40px;
	    padding-bottom: 40px;
	  }
	}
</style>
