<!-- testimonial-area start -->
<section
	class="testimonial-area"
	{% if section.settings.testi_bg_img_check %}
		style="background-image: url('{% if section.settings.testi_bg_img %}{{ section.settings.testi_bg_img | img_url: 'master' }}{% else %}https://via.placeholder.com/1920x194{% endif %}');"
	{% endif %}
>
	<div class="container">
		<div class="row">
			<div class="col">
				{% if section.settings.testi_title != '' %}
					<div class="section-capture">
						<div class="section-title">
							{% if section.settings.testi_title != '' %}
								<h2>{{ section.settings.testi_title }}</h2>
							{% endif %}
							{% if section.settings.testi_desc != '' %}
								<p>{{ section.settings.testi_desc }}</p>
							{% endif %}
						</div>
					</div>
				{% endif %}
				<div class="testimonial-slider owl-carousel owl-theme" id="testimonial-slider">
					{% for block in section.blocks %}
						<div class="item">
							<div class="testi-content{% if section.settings.testi_content_position == "center" %} testi-center{% elsif section.settings.testi_content_position == "right" %} testi-right{% else %} testi-left{% endif %}">
								<i class="{{ section.settings.testi_quote }} quote"></i>
								<h6>{{ block.settings.testi_authrtitle }}</h6>
								<span class="author-name">{{ block.settings.testi_authrname }}</span>
								<p>{{ block.settings.testi_desc }}</p>
								{% comment %}
									<div class="author-detail">
									  <span class="author-review">
									    {% if block.settings.testi_review1 !='' %}
									    <i class="{{ block.settings.testi_review1 }}"></i>
									    {% endif %}
									    {% if block.settings.testi_review2 !='' %}
									    <i class="{{ block.settings.testi_review2 }}"></i>
									    {% endif %}
									    {% if block.settings.testi_review3 !='' %}
									    <i class="{{ block.settings.testi_review3 }}"></i>
									    {% endif %}
									    {% if block.settings.testi_review4 !='' %}
									    <i class="{{ block.settings.testi_review4 }}"></i>
									    {% endif %}
									    {% if block.settings.testi_review5 !='' %}
									    <i class="{{ block.settings.testi_review5 }}"></i>
									    {% endif %}
									  </span>
									</div>
								{% endcomment %}
							</div>
						</div>
					{%- endfor -%}
				</div>
			</div>
		</div>
	</div>
</section>
<!-- testimonial-area end -->

<script>
	$('#testimonial-slider').owlCarousel({
	  loop: false,
	  rewind: true,
	  nav: false,
	  items: 1,
	  margin: 30,
	  navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
	  {%- if settings.enable_rtl -%}
	  rtl: true,
	  {%- endif -%}
	  responsive:{
	    0:{
	      items: 1,
	      margin: 15
	    },
	    479:{
	      items: 1,
	      margin: 15
	    },
	    768:{
	      items: 2
	    },
	    979:{
	      items: 1
	    },
	    1199:{
	      items: 1
	    }
	  }
	});
</script>
