<section class="section-ptb other-page">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="content-main-title">
          {% if section.settings.ship_policy_title != '' %}
          <h2>{{ section.settings.ship_policy_title }}</h2>
          {% endif %}
        </div>
        <div class="que-ans">
          <ul>
            {% for block in section.blocks %}
            <li>
              <h6>{{ block.settings.ship_policy_que }}</h6>
              <p>{{ block.settings.ship_policy_ans1 }}</p>

              {% if block.settings.ship_policy_ans2 != '' %}
              <p>{{ block.settings.ship_policy_ans2 }}</p>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Shipping Policy",
  "settings": [
  {
    "type": "header",
    "content": "Page Title"
  },
  {
    "type": "text",
    "id": "ship_policy_title",
    "label": "Title",
    "default": "Shipping Policy"
  }
  ],
  "blocks":[
  {
    "type": "shipping-policy",
    "name": "Shipping Policy",
    "settings": [
    {
      "type": "text",
      "id": "ship_policy_que",
      "label": "Question",
      "info": "Type Here For Question?"
    },
    {
      "type": "textarea",
      "id": "ship_policy_ans1",
      "label": "Answer1",
      "default": "Type In SideBox For Ans"
    },
    {
      "type": "textarea",
      "id": "ship_policy_ans2",
      "label": "Answer2"
    }
    ]
  }
  ]
}
{% endschema %}